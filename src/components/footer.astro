---
import { Icon } from "astro-icon";
import HeroImage from "~/components/hero-image.astro";
import type { FooterLink } from "~/types";

const links: Array<FooterLink> = [
  {
    url: "https://facebook.com",
    description: "facebook",
    icon: "fa-brands:facebook",
  },
  {
    url: "https://www.youtube.com",
    description: "youtube",
    icon: "fa-brands:youtube",
  },
  {
    url: "https://instagram.com",
    description: "instagram",
    icon: "fa-brands:instagram",
  },
];
---

<footer class="relative flex h-64 items-center justify-center">
  <div class="absolute inset-0 overflow-hidden opacity-40">
    <HeroImage />
  </div>
  <ul class="relative grid grid-cols-2 gap-4 sm:grid-cols-4">
    {
      links.map((link) => (
        <li>
          <a
            class={`flex h-16 w-16 items-center justify-center rounded-full border-2 border-current p-4 ${link.icon}`}
            href={link.url}
          >
            <span class="sr-only">{link.description}</span>
            <Icon class="h-full" name={link.icon} />
          </a>
        </li>
      ))
    }
  </ul>
</footer>

<style>
  .fa-brands {
    @apply text-4xl;
  }

  .youtube:hover {
    @apply bg-red-500 scale-125 transition-all duration-300;
  }

  .instagram:hover {
    @apply bg-purple-500 scale-125 transition-all duration-300;
  }

  .facebook:hover {
    @apply bg-blue-500 scale-125 transition-all duration-300;
  }
</style>
